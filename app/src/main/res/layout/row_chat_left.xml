<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_small"
    app:cardBackgroundColor="@color/greenish"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:background="@drawable/list_item_selector"
        android:layout_alignParentRight = "true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewSender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight = "true"
            android:padding="@dimen/spacing_small"
            android:text="Sender"
            android:textColor="@drawable/row_text_selector"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ImageViewMessage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/textViewMessage"
            android:visibility="gone"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/textViewTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImageViewMessage"
            android:gravity="right"
            android:padding="@dimen/spacing_small"
            android:text="Time"
            android:textColor="@drawable/row_text_selector"
            android:textSize="@dimen/text_size_ten"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/textViewMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="@dimen/spacing_small"
            android:text="Message"
            android:textColor="@drawable/row_text_selector"
            android:textAppearance="@style/FullScreen.TextAppearance.Title"
            android:textSize="18sp"
            android:layout_below="@+id/textViewSender"
            android:layout_toRightOf="@+id/ImageViewMessage"
            android:layout_toEndOf="@+id/ImageViewMessage"
            android:textAlignment="viewStart"
            android:textStyle="normal|bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>