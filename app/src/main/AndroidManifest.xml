<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wyyz.snapchat">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />


    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera.flash" android:required="false" />

    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".activity.MyApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SignupActivity"
            android:label="@string/_SignUp" />
        <activity
            android:name=".activity.SnapActivity"
            android:label="@string/_Snap" />
        <activity android:name=".activity.ProfileActivity" />
        <activity android:name=".activity.SettingsActivity" />
        <activity android:name=".activity.ProfileEditingActivity" />
        <activity android:name=".activity.AddFriendsActivity" />
        <activity android:name=".activity.AddFriendByUsernameActivity" />
        <activity android:name=".activity.ChatActivity"/>
        <activity android:name=".activity.AddedmeActivity" />
        <activity
            android:name=".activity.CameraActivity"
            android:label="@string/camera" />
        <activity
            android:name=".activity.OpenMySnapActivity"
            android:label="My Snap"
            android:theme="@style/Theme.AppCompat.Light.ActionBar"/>
        <activity
            android:name=".activity.DisplaySnapActivity"
            android:label="DisplaySnap"/>
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".activity.PreviewActivity"
            android:label="@string/preview"/>
        <activity android:name=".activity.MyfriendsActivity" />
        <activity android:name=".activity.ScanqrcodeActivity"/>
        <activity android:name=".activity.MyStory.StoryActivity" />
        <activity android:name=".activity.DiscoverActivity" />
        <activity android:name=".activity.DiscoverChannelActivity" />

        <activity
            android:theme="@style/AppThemeFullScreenImage"
            android:name=".activity.chat.FullScreenImageActivity">
        </activity>

    </application>

</manifest>